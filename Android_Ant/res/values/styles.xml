<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:actionBarStyle">@style/ArrowActionBar</item>
    </style>

    <style name="ArrowActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <!--<item name="android:background">@android:color/black</item>-->
        <item name="android:background">@color/ArrowRed</item>
    </style>

    <style name="PageHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ArrowRed</item>
    </style>
    
    <style name="list_item_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/ArrowRed</item>
    </style>
    
    <style name="list_item_subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="list_item_details">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ArrowGray</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="menu_prices">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/ArrowGray</item>
        <item name="android:typeface">sans</item>
    </style>

</resources>
